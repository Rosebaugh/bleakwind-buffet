<UserControl x:Class="PointOfSale.FinishOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="CashButton" Click="CashClick" Grid.Column="0" Margin="0,20,10,20" FontSize="20" Background="#FF2BAE37">
            Cash
        </Button>
        <Button x:Name="CardButton" Click="CreditDebitClick" Grid.Column="1" Margin="10,20,0,20" FontSize="20" Background="#FF1144F1">
            Debit/Credit
        </Button>
    </Grid>
</UserControl>
