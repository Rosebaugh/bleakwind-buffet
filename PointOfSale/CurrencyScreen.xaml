<UserControl x:Class="PointOfSale.CurrencyScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" >
                <TextBlock FontSize="40" HorizontalAlignment="Center">
                Dollar Bills
                </TextBlock>
                <StackPanel x:Name="Left" Margin="15,0,15,0">
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" >
                <TextBlock FontSize="40" HorizontalAlignment="Center">
                    Coins
                </TextBlock>
                <StackPanel x:Name="Right" Margin="15,0,15,0">
                </StackPanel>
            </StackPanel>
        </Grid>
        <Border x:Name="BottomPannel" DockPanel.Dock="Bottom">
        </Border>
    </DockPanel>
</UserControl>
